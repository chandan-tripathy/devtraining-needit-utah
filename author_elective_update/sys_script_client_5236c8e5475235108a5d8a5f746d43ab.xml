        <isolate_script>false</isolate_script>
        <messages/>
        <name>AutoPopulateUsereMail</name>
        <order/>
        <script><![CDATA[function onLoad() {
   //Type appropriate comment here, and begin script below
	var eMailFromForm = g_form.getValue('u_requested_for');
    var ga = new GlideAJX('GetEmailAddress');
	ga.addParam('sysparam_name','getEmailID');
	ga.addParam('sysparam_guser',eMailFromForm);
	
	ga.getXML(cFunction);
	function cfunction(response){
		var answer = response.responseXML.documentElement.getAttribute('answer');
		g_form.setValue('u_requested_for', answer + '');
		g_form.addInfoMessage('Requested for email has been auto populated based on Request for field value');
	}

		alert(answer);
}]]></script>
